---
interface Props {
	title: string;
	body: string;
	href: string;
	image: string;
	techStack: string[];
}

const { href, title, body, image, techStack } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<img src={image} alt={title} class="card-image" />
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
		<ul class="tech-stack">
			{techStack.map((tech) => (
				<li>{tech}</li>
			))}
		</ul>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}
	.card-image {
		width: 100%;
		height: 160px;
		object-fit: cover;
		border-radius: 6px;
		margin-bottom: 0.5rem;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.tech-stack {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin: 0.5rem 0 0 0;
		padding: 0;
		list-style: none;
	}
	.tech-stack li {
		background: rgba(255,255,255,0.08);
		padding: 0.25rem 0.75rem;
		border-radius: 4px;
		font-size: 0.85rem;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
